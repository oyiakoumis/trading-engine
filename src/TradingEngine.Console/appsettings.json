{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "Trading": {
    "InitialCapital": 100000.0,
    "TickHistorySize": 100,
    "StatisticsUpdateIntervalMs": 5000,
    "Symbols": ["AAPL", "MSFT", "GOOGL"],
    "Strategy": {
      "Momentum": {
        "LookbackPeriod": 20,
        "MomentumThreshold": 2.0,
        "TakeProfitPercent": 2.0,
        "StopLossPercent": 1.0,
        "PositionSizePercent": 10.0,
        "MinConfidence": 0.6
      }
    },
    "MockExchange": {
      "SimulatedLatencyMs": 10,
      "SlippagePercent": 0.01,
      "PartialFillProbability": 0.2,
      "RejectProbability": 0.02
    }
  }
}